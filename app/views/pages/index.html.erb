
	<div class='top'>
		<div class="container-fluid">
			<div class="row">
			<div class='col-md-12'>
				<center><h1>Welcome to Volunteer Israel</h1></center>
			</div>
		</div>
		<div class='row'>
			<div class='col-md-12'>
				<center><h2>Your trip is just a click away</h2></center>
			</div>
		</div>
		<div class='row'>
			<div class='col-md-6'>
				<div class="form-group">
				  <div class="input-group">
				    <input type="text" class="form-control" placeholder="search location, category, places, organizations">
				    <span class="input-group-btn">
				      <button class="btn btn-md btn-default btn-hover" type="submit">Search</button>
				    </span>
				  </div>
				</div>
    		</div>
		</div>
	</div>
</div>


<div class='bottom'>
<div class='container'>
	<div class='row'>
		<div class='col-md-12'>
			<center><h3><u>Our Featured Volunteer Opportunities</u></h3></center>
	</div>
</div>

<div class='container'>
	<div class='row'>
		<div class="col-md-10 col-md-offset-1">
			<% @organizations[0..5].each do |organization| %>
			  <div class="col-md-4">
			    <center>
			      <div class="panel panel-info">
			        <div class="panel-heading">
			          <h3 class="panel-title"><h4><%= organization.name %></h4></h3>
			        </div>
			        <div class="panel-body"> 
			          <%= image_tag organization.organization_image, :class => "img-responsive" %>
			          <p><%= organization.name %></p>
			          <%= link_to 'More Info', organization, :class =>"btn btn-md  btn-primary btn-center btn-block" %>
			        </div>
				  </div>
			    </center>
			  </div>
			<% end %>
			</div>
		</div>
	</div>
</div>

